{
  "name": "game-creep",
  "version": "1.0.0",
  "description": "",
  "main": "client/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "mkdir": "npm run mkdir:public",
    "clean": "rm -rf build",
    "mkdir:public": "mkdir -p build/dev/public",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js",
    "serve": "[ \"$NODE_ENV\" = \"production\" ] && npm run serve:server:production || npm run serve:server:dev",
    "serve:server:production": "NODE_ENV=production CLIENT_PATH=build/production/public node build/production/server/index.js",
    "serve:server:dev": "NODE_ENV=development CLIENT_PATH=build/dev/public nodemon --exec babel-node server/index.js --watch server --ignore server/public",
    "build:html": "npm run clean:html && cp client/index.html build/dev/public",
    "clean:html": "rm -f build/index.html",
    "build:css": "npm run clean:css && cp client/main.css build/dev/public",
    "clean:css": "rm -f build/main.css",
    "build:js": "npm run clean:js && webpack",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matcodesalot/creepy-walkers.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matcodesalot/creepy-walkers/issues"
  },
  "homepage": "https://github.com/matcodesalot/creepy-walkers#readme",
  "dependencies": {
    "express": "^4.14.0",
    "socket.io": "^1.7.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "nodemon": "^1.11.0",
    "webpack": "^1.13.3"
  }
}
