{
  "name": "game-creep",
  "version": "1.0.0",
  "description": "",
  "main": "client/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build",
    "mkdir": "npm run mkdir:public && npm run mkdir:assets",
    "mkdir:public": "mkdir -p build/dev/public",
    "mkdir:assets": "mkdir -p build/dev/public/assets",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js && npm run build:assets",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",

    "serve": "[ \"$NODE_ENV\" = \"production\" ] && npm run serve:server:production || npm run serve:server:dev",
    "serve:server:production": "NODE_ENV=production CLIENT_PATH=build/production/public node build/production/server/index.js",
    "serve:server:dev": "NODE_ENV=development CLIENT_PATH=build/dev/public nodemon --exec babel-node server/index.js --watch server --ignore server/public",
    "build:html": "npm run clean:html && cp client/index.html build/dev/public",
    "watch:html": "npm run build:html && chokidar client/index.html -c 'npm run build:html'",
    "clean:html": "rm -f build/index.html",
    "build:css": "npm run clean:css && cp client/main.css build/dev/public",
    "watch:css": "npm run build:css && chokidar client/main.css -c 'npm run build:css'",
    "clean:css": "rm -f build/main.css",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "build:assets": "npm run clean:assets && cp -r client/assets build/dev/public/assets",
    "clean:assets": "rm -rf build/dev/public/assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matcodesalot/creepy-walkers.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matcodesalot/creepy-walkers/issues"
  },
  "homepage": "https://github.com/matcodesalot/creepy-walkers#readme",
  "dependencies": {
    "express": "^4.14.0",
    "socket.io": "^1.7.1",
    "bootstrap-social": "^5.0.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.0",
    "express": "^4.14.0",
    "firebase": "^3.0.5",
    "font-awesome": "^4.6.3",
    "lodash": "^3.10.1",
    "react": "^0.14.8",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.0.4",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-1": "^6.5.0",
    "chai": "^3.5.0",
    "chai-jquery": "^2.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.21.0",
    "imports-loader": "^0.6.5",
    "jquery": "^3.1.0",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.8.0",
    "react-addons-test-utils": "^0.14.8",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "chokidar-cli": "^1.2.0",
    "nodemon": "^1.11.0",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.14.0"
  }
}
